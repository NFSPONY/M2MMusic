<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_20">

    <com.m2mmusic.android.ui.custom.CustomRoundAngleImageView
        android:id="@+id/new_res_cover"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        app:radius="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/new_res_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/zhuzia_sleek"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/new_res_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/new_res_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/zhuzia_sleek"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/new_res_main_title"
        app:layout_constraintStart_toEndOf="@+id/new_res_cover"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/connect_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:fontFamily="@font/zhuzia_sleek"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/new_res_main_title"
        app:layout_constraintBaseline_toBaselineOf="@id/new_res_main_title" />

    <TextView
        android:id="@+id/new_res_artists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/zhuzia_sleek"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="11sp"
        app:layout_constraintBaseline_toBaselineOf="@id/new_res_main_title"
        app:layout_constraintStart_toEndOf="@+id/connect_char" />

</androidx.constraintlayout.widget.ConstraintLayout>