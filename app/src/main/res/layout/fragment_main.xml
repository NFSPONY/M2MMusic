                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </com.m2mmusic.android.ui.custom.FixDragLayout>

</androidx.constraintlayout.widget.ConstraintLayout>