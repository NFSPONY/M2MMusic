<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/notification"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/widget_album"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@drawable/default_cover"
        android:contentDescription="@string/widget_album" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.4"
        android:layout_marginStart="@dimen/dp_10">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:fontFamily="@font/zhuzia_sleek"
            android:singleLine="true"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/notification_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/zhuzia_sleek"
                android:textSize="10sp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/notification_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:fontFamily="@font/zhuzia_sleek"
                android:textSize="10sp"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/notification_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/zhuzia_sleek"
                android:textSize="10sp"
                android:singleLine="true"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/notification_pre"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/ic_skip_previous" />

    <ImageView
        android:id="@+id/notification_play_or_pause"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/ic_pause" />

    <ImageView
        android:id="@+id/notification_next"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@drawable/ic_skip_next" />

    <ImageView
        android:id="@+id/notification_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25"
        android:src="@drawable/ic_close" />


</LinearLayout>