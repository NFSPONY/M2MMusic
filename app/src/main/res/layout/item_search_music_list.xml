<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginBottom="@dimen/dp_8">

    <com.m2mmusic.android.ui.custom.CustomRoundAngleImageView
        android:id="@+id/search_music_list_cover"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72"
        app:radius="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/search_music_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/zhuzia_sleek"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintStart_toEndOf="@+id/search_music_list_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_music_list_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/zhuzia_sleek"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/search_music_list_title"
        app:layout_constraintStart_toEndOf="@+id/search_music_list_cover"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/connect_words_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 首， by "
        android:fontFamily="@font/zhuzia_sleek"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/search_music_list_count"
        app:layout_constraintBaseline_toBaselineOf="@id/search_music_list_count" />

    <TextView
        android:id="@+id/search_music_list_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/zhuzia_sleek"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/search_music_list_count"
        app:layout_constraintStart_toEndOf="@+id/connect_words_1" />

    <TextView
        android:id="@+id/connect_words_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="，播放 "
        android:fontFamily="@font/zhuzia_sleek"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/search_music_list_creator"
        app:layout_constraintStart_toEndOf="@id/search_music_list_creator" />

    <TextView
        android:id="@+id/search_music_list_play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/zhuzia_sleek"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/connect_words_2"
        app:layout_constraintStart_toEndOf="@id/connect_words_2" />

    <TextView
        android:id="@+id/end_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 次"
        android:fontFamily="@font/zhuzia_sleek"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/search_music_list_play_count"
        app:layout_constraintStart_toEndOf="@id/search_music_list_play_count" />

</androidx.constraintlayout.widget.ConstraintLayout>